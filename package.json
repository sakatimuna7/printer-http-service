{
  "name": "eklinik-printer-service",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/usb": "^2.0.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "start": "bun run index.ts",
    "build:mac": "bun build --compile --target=bun-macos-arm64 ./index.ts --outfile ./dist/printer-service-mac",
    "build:win": "bun build --compile --target=bun-windows-x64 ./index.ts --outfile ./dist/printer-service.exe"
  },
  "dependencies": {
    "escpos": "3.0.0-alpha.6",
    "escpos-usb": "3.0.0-alpha.4",
    "usb": "^2.17.0"
  }
}
